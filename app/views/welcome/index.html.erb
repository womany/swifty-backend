<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tbody>
          <% @quotes.each do |quote| %>
            <tr>
              <td><%= quote.user.name %></td>
              <td><%= link_to(quote.title, quote.url, :target => '_blank') %></td>
              <td><%= quote.content %></td>
              <td><%= quote.comment %></td>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 pagination-centered">
    <%= will_paginate @quotes, :renderer => BootstrapPagination::Rails, :bootstrap => 3 %>
  </div>
</div>
